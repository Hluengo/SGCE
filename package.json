  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:run": "playwright test --workers=1",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:security": "playwright test --project=security",
    "test:e2e:security:headed": "playwright test --project=security --headed",
    "test:all": "npm run test:run && npm run test:e2e:run",
    "test:performance": "playwright test --config=playwright.config.performance.ts --project=performance",
    "test:performance:ci": "lhci autorun",
    "test:regression": "npm run test:run && npm run test:e2e:run && npm run test:performance",
    "test:full-suite": "npm run lint:design && npm run security && npm run test:regression && npm run build",
    "build-storybook": "storybook build",
    "lint:design": "node scripts/lint-design-system.mjs",
    "test:e2e:visual": "playwright test --grep \"@visual\" --project=\"chromium\" --project=\"Mobile Chrome\"",
    "test:e2e:visual:update": "playwright test --grep \"@visual\" --project=\"chromium\" --project=\"Mobile Chrome\" --update-snapshots",
    "security:audit": "npm audit --audit-level=high",
    "security:doctor": "npx -y react-doctor@latest . --verbose --diff",
    "security": "npm run security:audit && npm run security:doctor"
  },
